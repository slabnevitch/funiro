footer
	.footer__container.wrapper
		.footer__body
			.footer__main
				span.footer__logo.footer__title Funiro.
				.footer__text Worldwide furnityre store since 2020. We sell over 100+ brancded products on our website
				.footer__contacts.contacts-footer
					.contacts-footer__item.icon-location Sawojajar Malang, Indonesia
					.contacts-footer__item.icon-phone + 6289 456 3455
					.contacts-footer__item www.funiro.com

			.footer__menu.menu-footer
				.menu-footer__column
					.footer__title Menu
					- var menu1 = ['products', 'rooms', 'inspirations', 'about us', 'terms & policy'];
					ul.menu-footer__list
						each item in menu1
							li
								a(href="").menu-footer__link= item

				.menu-footer__column
					.footer__title Account
					- var menu2 = ['my account', 'checkout', 'my cart', 'my catalog'];
					ul.menu-footer__list
						each item in menu2
							li
								a(href="").menu-footer__link= item

				.menu-footer__column
					.footer__title Stay Connected
					- var menu3 = ['facebook', 'indtagram', 'twitter'];
					ul.menu-footer__list
						each item in menu3
							li
								a(href="").menu-footer__link= item


			.footer__subscribe.subscribe-footer
				.footer__title Stay updated
				form.subscribe-footer__form
					input(class="input" placeholder="Enter your email")
					button.subscribe-footer__button.icon.icon-send