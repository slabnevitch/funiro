.page__main-slider.main-slider
	.main-slider__container.wrapper
		.main-slider__body
			.main-slider__content.content-main
				h1.content-main__title High-Quality Furniture Just For You
				.content-main__text Our furniture is made from selected and best quality materials that are suitable for your dream home
				.content-main__button.button(data-da="main-slider__body, 991.98") Shop Now

			.main-slider__slider.slider-main.swiper-container.swiper
				.slider-main__controls.controls-slider-main
					.controls-slider-main__dots.swiper-pagination
					.controls-slider-main__arrows.slider-arrows
						button(type="button").slider-arrow.slider-arrow--prev.icon-arrow-down
						button(type="button").slider-arrow.slider-arrow--next.icon-arrow-down
				
				.slider-main__body.swiper-wrapper
					- for (var i=0; i < 3; i++)
						.slider-main__slide._fit.swiper-slide
							.slider-main__img._fit
								img._fit-img(src="img/main-slider/0"+(i+1)+".jpg")
							a(href="" data-swiper-parallax-opacity="0" data-swiper-parallax-x="-100%").slider-main__content
								.slider-main__title Bohauss
								.slider-main__text Luxury big sofa 2-seat
								.slider-main__price.icon-arrow-link Rp 17.000.000